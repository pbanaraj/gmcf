{%
  set classes = [
    node.bundle|clean_class,
    node.isPromoted() ? 'is-promoted',
    node.isSticky() ? 'is-sticky',
    not node.isPublished() ? 'is-unpublished',
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}
{#Attach js Variable#}
 {% if node %}
    {{ attach_js_variables('fgmc_homepage','bannerNodeid',node.id) }}
  {% endif %}
{#Attach Library#}
{{ attach_library('fgmc_homepage/fgmc_homepage.banner.testimonials') }} 

{# Keep below <div{{ attributes.addClass(classes) }}> and {{ title_suffix }} for contextual links #}

<div{{ attributes.addClass(classes) }}>

  {{ title_suffix }}

  {% set node_class = node.hasField('field_block_css_class') ? node.get('field_block_css_class').value : '' %}

  {#Icon URL#}
  {% set imageURL = '' %}
  {% if node.hasField('field_image') and node.field_image is not empty %}
    {% set imageURL =  file_url(node.field_image.entity.uri.value) %}
  {% endif %}
 
  <section class="section-0 row {{node_class}}">
  <div class="home-banner" style="background:url({{imageURL}});background-position: right bottom;background-repeat: no-repeat;background-size: cover; ">
    <div class="banner-caption">
      {{content.body}}		
      <div class="tm-slider">
        <div class="loader_testimonial">
          <img src="/themes/basis/images/bx_loader.gif" />
        </div>
      </div>	
    </div>

    <div class="bbb-icon">
      <a class="ft_bot" href="https://www.bbb.org/charlotte/business-reviews/mortgage-lender/first-guaranty-mortgage-corporation-dba-goodmortgagecom-in-charlotte-nc-542287">
        <img src="/themes/basis/images/BBB.PNG">
      </a>
    </div>
  </section>
</div>